<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Code Reserve | Home</title>
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Indie+Flower&display=swap" rel="stylesheet">
        <style>
        body {
            margin: 0 12px 12px 12px;
            padding: 0;
            background-color: #f4f4f4;
            font-family: "Indie Flower", cursive;
            background-image: 
            linear-gradient(rgba(0, 0, 0, 0.02) 1px, transparent 1px),
            linear-gradient(90deg, rgba(0, 0, 0, 0.02) 1px, transparent 1px);
            background-size: 20px 20px;
        }
        body::-webkit-scrollbar {
            display: none;
        }
        .heading {
            text-align: center;
            color: black;
            font-size: 3rem;
            letter-spacing: -0.1rem;
        }
        .add {
            text-align: center;
            color: black;
            font-size: 3rem;
        }
        .add_button {
            padding: 10px;
            height: 30px;
            width: 30px;
            background: #f7f7f1;
            border: 1px solid black;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 50%;
            box-shadow: 0 8px 32px rgba(140, 80, 100, 0.2);
            backdrop-filter: blur(12px);
            bottom: 5%;
            right: 5%;
            position: fixed;
            cursor: pointer;
            z-index: 10;
        }
        .add_button:hover {
            background-color: rgba(255, 240, 245, 0.1);
        }
        .container {
            width: 100%;
            display: flex;
            justify-content: center;
            flex-wrap: wrap;
            gap: 15px;
            overflow-y: auto;
        }
        .block {
            padding: 12px 12px 12px 12px;
            border-radius: 11px;
            background-color: #ffffff;
            box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
            transition: box-shadow 0.3s ease-in-out;
            backdrop-filter: blur(12px);
            display: flex;
            flex-direction: column;
            justify-content: flex-start;
            align-items: center;
        }
        .block:hover {
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.25);
        }
        .btns {
            display: flex;
            gap: 10px;
        }
        .blockBtn {
            font-family: "Indie Flower", cursive;
            padding: 5px;
            border: none;
            box-shadow: 0 8px 32px rgba(140, 80, 100, 0.2);
            border-radius: 8px;
            font-size: 1rem;
            font-weight: 600;
            color: white;
            background-color: black;
        }
        .blockBtn:hover {
            background-color: white;
            color: black;
            cursor: pointer;
        }
        @media (max-width: 280px) {
            .heading {
                font-size: 2.5rem;
            }
        }
        </style>
    </head>
    <body>
        <h1 class="heading">Code Reserve</h1>
        <div class="add_button">
            <h1 class="add">+</h1>
        </div>
        <div class="container">
            <% response.forEach(item =>{ %>
                <div class="block">
                    <h2><%= item.title %></h2>
                    <p style="font-family: 'Courier New', Courier, monospace;"><pre><%= item.code %></pre></p>
                    <div class="btns">
                        <form action="/editCode/<%= item.id %>" method="GET">
                            <button class="blockBtn">âœŽUpdate</button>
                        </form>
                        <form action="/delete/<%= item.id %>?_method=DELETE" method="POST">
                            <button class="blockBtn">ðŸ—‘Delete</button>
                        </form>
                    </div>
                </div>
            <% }) %>
        </div>

        <script>
            let addButton = document.querySelector(".add_button");
            addButton.addEventListener('click', ()=>{
                window.location.href = '/addCode';
            })
        </script>
    </body>
</html>